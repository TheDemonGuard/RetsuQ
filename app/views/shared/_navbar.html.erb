<% if user_signed_in? %>
  <% if current_user.owner? %>
    <div class="<%= 'navbar navbar-expand-sm navbar-light navbar-owner' %>">
  <% else %>
    <div class="<%= 'navbar navbar-expand-sm navbar-light navbar-lewagon' %>">
  <% end %>

  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "RetsuQ_logo_large.png" %>
  <% end %>

  <div class="container d-flex justify-content-end actions">
    <div class="queue-status">
      <i class="fas fa-toggle-on"></i>
    </div>
    <div class="add-queuer">
      <%= link_to new_restaurant_queuer_path(current_user.id) do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>

  <div class="dropdown">
    <button class="btn dropdown-toggle " type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24"><title>menu</title><g fill="none"><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z" fill="#212121"></path></g></svg>    </button>

    <ul class="dropdown-menu text-left" aria-labelledby="dropdownMenuButton1">
      <li><p class="dropdown-item"><%= current_user.email %></p></li>
      <li><p class="dropdown-item text-decoration-none" ><%= link_to "Current Queue", destroy_user_session_path, class: "text-decoration-none"%></p></li>
      <li><p class="dropdown-item text-decoration-none" ><%= link_to "Owner's Portal", owner_path, class: "text-decoration-none" if current_user.owner? %></p></li>
      <li><p class="dropdown-item text-decoration-none" ><%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "text-decoration-none"%></p></li>
    </ul>
  </div>
<% else %>
  <div>
    <div class="btn">
      <%= link_to "Sign In", new_user_session_path, class: "btn-primary text-decoration-none" %>
    </div>
    <div class="btn">
      <%= link_to "Sign Up",  new_user_registration_path, class: "btn-flat text-decoration-none" %>
    </div>
  </div>
<% end %>
</div>
