<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<% Restaurant.all.each do |restaurant| %>
<ul style="max-width: 270px">
  <div class="booking-card-thumbnail"
        <% if restaurant.photo.attached? %>
          style="height: 100px; background-image: url('<%= cl_image_path restaurant.equipment_listing.photo.key  %>')"
        <% else %>
          style="height: 100px; background-image: url('https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80')"
        <% end %>>
  </div>
  <li><%= restaurant.name %></li>
  <li><%= restaurant.price_range %></li>
  <li>8<br>
  waiting
  </li>
  <li><%= restaurant.total_wait_time %><br>
  minutes</li>
  <li>JOIN QUEUE</li>
</ul>
<% end %>
