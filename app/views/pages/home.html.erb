<section>
  <h3>Search on Map</h3>

    <div style="width: 100%; height: 550px; overflow:hidden;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</section>

<section data-controller="nearrestaurants">
  <h3>Restaurants near you</h3>
  <label for="restaurantRange" class="form-label">Max. distance from your location:</label>
  <input type="range" class="form-range" min="0" max="1000" step="5" id="restaurantRange" data-action="change->nearrestaurants#getRestaurants">

  <div class="restaurants-wrapper" data-nearrestaurants-target="nearyou">
  </div>

</section>

<section>
  <h3>Restaurants in Tokyo</h3>
  <h4><%= Time.now %></h4>
  <!-- Flexbox wrapper for restaurant cards -->
  <div class="restaurants-wrapper">
    <% msg_index = 0 %>
    <% @restaurants.each do |restaurant| %>  <!--Start iteration -->
      <% msg_index = msg_index + 1 %>
        <div class="modal fade" id="exampleModal<%= msg_index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel<%= msg_index %>" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel<%= msg_index %>">Now Closed</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            </div>
          </div>
        </div>
        <%= render "restaurant_card", restaurant: restaurant, msg_index: msg_index %>
        <% end %>
    </div>

</section>
