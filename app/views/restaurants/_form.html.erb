<%= simple_form_for(restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :price_range %>
  <%= f.input :open_time %>
  <%= f.input :close_time %>
  <%= f.input :status %>
  <%= f.input :capacity %>
  <%= f.input :total_wait_time %>
  <%= f.input :time_per_person %>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Back", owner_path, class: "btn btn-light" %>
  <% end %>
